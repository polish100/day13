<%= form_for @inquiry, url: inquiries_confirm_path do |f| %>
<% if @inquiry.errors.any? %>
<div class="alert alert-danger" role="alert">
  <strong>入力内容にエラーがあります</strong>

  <ul>
    <% @inquiry.errors.each do |attr, msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="header">
  <h3>お問い合わせ</h3>
</div>

<table class="table">
  <tr>
    <th>名前</th>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <th>お問い合わせ内容</th>
    <td><%= f.text_area :message %></td>
  </tr>
</table>
<br>
<div class="btn">
  <%= f.submit '確認' %>
</div>
<br>
<% end %>
<div class="footer">
  <%= link_to 'TOP', root_path %>
</div>
